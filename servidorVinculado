USE INTEGRACION;
CREATE LOGIN powerbi WITH PASSWORD = '******';
CREATE USER powerbi	 FOR LOGIN powerbi;
GRANT SELECT ON dbo.Atestados TO powerbi;

USE GESTDOC_PRUEBAS;
CREATE LOGIN USR_PBI_RO WITH PASSWORD = 'P0ware24';
CREATE USER USR_PBI_RO FOR LOGIN USR_PBI_RO;
ALTER ROLE [db_datareader] ADD MEMBER [USR_PBI_RO];

USE POWERBI;
EXEC sp_addlinkedserver
    @server = 'SRV-SQLW19',
    @srvproduct = '',
    @provider = 'SQLNCLI',
    @datasrc = 'SRV-SQLW19\ARCGIS',
    @catalog = 'INTEGRACION';
EXEC sp_addlinkedsrvlogin
    @rmtsrvname = 'SRV-SQLW19',
    @useself = 'FALSE',
    @rmtuser = 'powerbi',
    @rmtpassword = '******';

USE POWERBI;
EXEC sp_addlinkedserver
    @server = 'SRV-SQL',
    @srvproduct = '',
    @provider = 'SQLNCLI',
    @datasrc = 'SRV-SQL',
    @catalog = 'GESTDOC_PRUEBAS';
EXEC sp_addlinkedsrvlogin
    @rmtsrvname = 'SRV-SQL',
    @useself = 'FALSE',
    @rmtuser = 'USR_PBI_RO',
    @rmtpassword = 'P0ware24';