CREATE VIEW [dbo].[vEntradasSalidas]
AS SELECT [Id]
      ,[Numero]
      ,[TipoReg]
      ,[Principal]
      ,[Fecha]
      ,[TipoDocumento]
      ,[FechaDocumento]
      ,[Referencia]
      ,[Extracto]
      ,[DirigidoA]
      ,[Interesado]
      ,[Representado]
      ,[Relacionado]
      ,[Usuario]
      ,[Cerrado]
      ,[Departamento]
      ,[TipoExpediente]
      ,[Materia]
      ,[DirEntrada]
      ,[DirNotificacion]
      ,[ClaseRegistro]
      ,[FCambioEstado]
      ,[OcultoWeb]
      ,[FormaEntrega]
      ,[Referencia2]
      ,[ClaseRegistroWeb]
      ,[FCambioFACe]
      ,[FCambioValor]
      ,[FCambioEstadoAnterior]
	  ,CASE WHEN [IdOriginal] IS NULL THEN 'No' ELSE 'Si' END AS [EsEnlace]
      ,[IdOriginal]
  FROM [SRV-SQL].[GESTDOC_PRUEBAS].[dbo].[EntradasSalidas]
  WHERE dbo.EntradasSalidas.OcultoGD = 0;

CREATE VIEW [dbo].[vTipoReg]
AS SELECT [Id]
      ,[Nombre]
      ,[TipoEntr]
      ,[Contador]
      ,[WebPublico]
      ,[EsDeOficio]
      ,[SalidasDemoradas]
      ,[IdDocumentoDef]
      ,[EsDeUnLibro]
  FROM [SRV-SQL].[GESTDOC_PRUEBAS].[dbo].[TipoReg];

CREATE VIEW [dbo].[GDvTipoDocumentos]
AS SELECT [Id]
      ,[Nombre]
  FROM [SRV-SQL].[GESTDOC_PRUEBAS].[dbo].[TipoDocumentos];

CREATE VIEW [dbo].[GDvTipoExpedientes]
AS SELECT [Id]
      ,[Nombre]
      ,[Departamento]
      ,[Usuario]
      ,[Materia]
      ,[Registro]
      ,[Activo]
      ,[VisibleWeb]
  FROM [SRV-SQL].[GESTDOC_PRUEBAS].[dbo].[TipoExpedientes];

CREATE VIEW [dbo].[GDvMateriaExpedientes]
AS SELECT [Id]
      ,[Nombre]
      ,[TipoRegistro]
      ,[RelMateria]
  FROM [SRV-SQL].[GESTDOC_PRUEBAS].[dbo].[MateriaExpedientes];

CREATE VIEW [dbo].[GDvClaseRegistro]
AS SELECT [Id]
      ,[Nombre]
      ,[IdTipoReg]
  FROM [SRV-SQL].[GESTDOC_PRUEBAS].[dbo].[ClaseRegistro];

CREATE VIEW [dbo].[GDvDepartamentos]
AS SELECT [Id]
      ,[Nombre]
  FROM [SRV-SQL].[GESTDOC_PRUEBAS].[dbo].[Departamentos];

CREATE VIEW [dbo].[GDvDirigidoA]
AS SELECT [Id]
      ,[Nombre]
      ,[TipoReg]
  FROM [SRV-SQL].[GESTDOC_PRUEBAS].[dbo].[DirigidoA];


